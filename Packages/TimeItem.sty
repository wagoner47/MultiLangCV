\def\timeitemMatterWidth{0.8}
\def\timeitemTimeWidth{0.2}


\newcommand{\timeitem}[4][]{
\noindent
\begin{tabularx}{\textwidth}{@{}L{\timeitemMatterWidth\textwidth}@{}R{\timeitemTimeWidth\textwidth}@{}}
{\bfseries  #2}\\ \textit{#3}  & #4\\ \hangindent=2em\hangafter=0 {\small #1}
 \end{tabularx}\\[1ex]
}

\NewDocumentCommand{\educationitem}{ o m m m !o !d<> !d()}{
